{
  "name": "@zhengxs/bem",
  "version": "0.3.0",
  "description": "助手函数",
  "main": "./dist/bem.common.js",
  "module": "./dist/bem.esm.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "bem"
  ],
  "scripts": {
    "prebuild": "node ./tools/clean.js",
    "build": "rollup -c rollup.config.js",
    "postbuild": "tsc --emitDeclarationOnly",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{js,ts,md}\"",
    "test": "jest",
    "cov": "jest --coverage",
    "ci": "jest --coverage ----coverageReporters=json",
    "e2e": "cypress run",
    "api": "api-extractor run",
    "doc": "typedoc",
    "release": "typedoc && gh-pages -d ./dist-doc -t",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "preversion": "npm run lint && npm test",
    "version": "npm run changelog",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@microsoft/api-extractor": "^7.15.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "commitizen": "^4.2.4",
    "commitlint": "^12.1.4",
    "conventional-changelog-cli": "^2.1.1",
    "cypress": "^7.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "del": "^6.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "gh-pages": "^3.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.15",
    "prettier": "^2.3.0",
    "rollup": "^2.48.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.6",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.36",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "4.2.4"
  },
  "homepage": "https://github.com/zhengxs2018/bem#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhengxs2018/bem"
  },
  "bugs": {
    "url": "https://github.com/zhengxs2018/bem/issues"
  },
  "engines": {
    "node": ">= 10.x"
  },
  "author": {
    "name": "zhengxs2018",
    "email": "zhengxs2018@foxmail.com"
  },
  "license": "MIT"
}
